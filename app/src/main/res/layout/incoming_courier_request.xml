<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_curve"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_dummy_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/dark_gray"/>

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvTimer"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/blue_circle"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="00:00"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"/>

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfile"
            android:layout_marginTop="10dp"
            android:text="John Smith"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            android:text="JH67889498jfj"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tvServiceTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderNo"
            android:layout_marginTop="10dp"
            android:text="Service Type"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvServiceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderNo"
            android:layout_marginTop="10dp"
            android:text="Courier"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tvCompanyNameLAbel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceTypeLabel"
            android:layout_marginTop="10dp"
            android:text="Company Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceType"
            android:layout_marginTop="10dp"
            android:text="EKart"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tvWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCompanyNameLAbel"
            android:layout_marginTop="10dp"
            android:text="Weight"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCompany"
            android:layout_marginTop="10dp"
            android:text="50 Kg"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tvPckUpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWeightLabel"
            android:layout_marginTop="10dp"
            android:text="Pick Up"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvPickUp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWeight"
            android:layout_marginTop="10dp"
            android:text="Mohali 3b2 fgfgbfthnyhnyt frhgtyjyujuyeferekdfeirjfir kfjkjierf kferkfjer"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tvDropUpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPckUpLabel"
            android:layout_marginTop="10dp"
            android:text="Drop Off"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvDropup"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPickUp"
            android:layout_marginTop="10dp"
            android:text="Mohali 3b2 fgfgbfthnyhnyt frhgtyjyujuyeferekdfeirjfir kfjkjierf kferkfjer"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvMenuLAbel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDropup"
            android:layout_marginTop="12dp"
            android:text="Menu Items"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvMenuLAbel"
            android:layout_marginTop="12dp"
            android:text="Desert (2)"
            android:textSize="14sp"
            android:layout_marginLeft="25dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/dark_gray"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvAccept"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvItems"
            android:layout_marginTop="20dp"
            android:text="Accept"
            android:textSize="16sp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            />

        <com.ibring_driver.provider.Utils.ClanProTextView
            android:id="@+id/tvCancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvItems"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@color/red"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>